<UserControl x:Class="SecondDesktopCMDManager.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SecondDesktopCMDManager"
             mc:Ignorable="d" 
             Width="344" Height="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition Height="64"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="1" Text="SecondDesktopCMDManager" FontSize="32" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox Name="Message" Grid.Row="3" HorizontalContentAlignment="Left" Text="Hello World" VerticalContentAlignment="Center" VerticalAlignment="Center" Height="32" Margin="5"/>
        <Button Grid.Row="5" Content="Hello World" Width="128" HorizontalAlignment="Right" Margin="5" Click="Button_Click"/>
    </Grid>
</UserControl>
